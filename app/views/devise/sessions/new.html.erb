<div class="container-devise">
  <h2 class='devise-title'>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'devise-form'}) do |f| %>

    <div class="fields-container">
      <div><%#= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>

      <div><%#= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>

      <% if devise_mapping.rememberable? -%>
        <div class='sign-in-checkbox'>
          <%= f.label :remember_me, class: 'control checkbox' do %>
            Remember Me
            <%= f.check_box :remember_me %>
            <span class="control-indicator"></span>
          <% end %>
        </div>
      </div>
    <% end -%>

    <div class='submit-container'>
      <%= f.submit "Sign in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
